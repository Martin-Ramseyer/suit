@{
}

<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1>Usuarios</h1>
			<a asp-action="Crear" class="btn btn-primary">Crear Usuario</a>

			<table class="table table-bordered table-hover">
				<thead>
					<tr>
						<th>Id</th>
						<th>Nombre</th>
						<th>Apellido</th>
						<th>Usuario</th>
					</tr>
				</thead>
				<tbody>
					@foreach (var usuarios in Model)
					{
						<tr>
							<td>@usuarios.usuario_id</td>
							<td>@usuarios.nombre</td>
							<td>@usuarios.apellido</td>
							<td>@usuarios.usuario</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
	</div>
@model suitMvc.ViewModels.LoginVM
@{
    ViewData["Title"] = "Iniciar Sesión";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h1 class="h3 mb-0">Iniciar Sesión</h1>
                </div>
                <div class="card-body">
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                    <form asp-controller="Login" asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="usuario" class="form-label">Usuario</label>
                            <input asp-for="usuario" class="form-control" />
                            <span asp-validation-for="usuario" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="contrasena" class="form-label">Contraseña</label>
                            <input asp-for="contrasena" class="form-control" type="password" />
                            <span asp-validation-for="contrasena" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
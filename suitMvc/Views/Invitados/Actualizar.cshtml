@model suitMvc.Models.Invitados

@{
    ViewData["Title"] = "Actualizar";
}

<h1 class="text-center my-4">Actualizar Invitado</h1>

<h4 class="text-center">Editar información del invitado</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6 col-sm-12">
        @if (User.Identity.IsAuthenticated)
        {
            var isAdmin = User.Claims.Where(c => c.Type == "admin").Select(c => c.Value).SingleOrDefault() == "1";

            <form asp-action="Actualizar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre -->
                <div class="form-group mb-3">
                    <label asp-for="nombre" class="form-label">Nombre</label>
                    <input asp-for="nombre" class="form-control" />
                    <span asp-validation-for="nombre" class="text-danger"></span>
                </div>

                <!-- Apellido -->
                <div class="form-group mb-3">
                    <label asp-for="apellido" class="form-label">Apellido</label>
                    <input asp-for="apellido" class="form-control" />
                    <span asp-validation-for="apellido" class="text-danger"></span>
                </div>

                <!-- Acompañantes -->
                <div class="form-group mb-3">
                    <label asp-for="acompanantes" class="form-label">Acompañantes</label>
                    <input asp-for="acompanantes" class="form-control" />
                    <span asp-validation-for="acompanantes" class="text-danger"></span>
                </div>

                @if (isAdmin)
                {
                    <!-- Entrada Free -->
                    <div class="form-group mb-3">
                        <label asp-for="entrada_free" class="form-label">Free</label>
                        <input asp-for="entrada_free" class="form-control" />
                        <span asp-validation-for="entrada_free" class="text-danger"></span>
                    </div>

                    <!-- Consumiciones -->
                    <div class="form-group mb-3">
                        <label asp-for="consumiciones" class="form-label">Consumiciones</label>
                        <input asp-for="consumiciones" class="form-control" />
                        <span asp-validation-for="consumiciones" class="text-danger"></span>
                    </div>
                }

                <!-- Botones de acción -->
                <div class="d-flex justify-content-center mt-4">
                    @if (isAdmin)
                    {
                        <a class="btn btn-primary me-2" asp-action="ListarInvitados">Volver</a>
                    }
                    else
                    {
                        <a class="btn btn-primary me-2" asp-action="Index">Volver</a>
                    }
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model IEnumerable<suitMvc.Models.Invitados>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Crear">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.acompanantes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.entrada_free)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.consumiciones)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuarios)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.acompanantes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.entrada_free)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.consumiciones)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.nombre)
                @Html.DisplayFor(modelItem => item.Usuarios.apellido)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.invitado_id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.invitado_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
